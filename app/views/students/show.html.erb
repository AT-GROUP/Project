<span>ФИО:</span> <%= @student.fio %> <br/>
<span>Группа:</span> <%= @student.group.number %> <br/>
<strong>Результаты:</strong></br>
<% @student.results.each do |result| %>
  <br/>
  <%= content_tag :span, "Задание: "%>
  <%= link_to "Задание ##{result.task.id}", task_path(result.task) %><br/>
  <%= content_tag :span, "Компонент V: #{result.v_result.mark}"  %>
  <%= content_tag :span, "Компонент G: #{result.g_result.mark}"  %>
  <%= content_tag :span, "Компонент S: 100"  %><br/>
  <%= content_tag :span, "Оценка: #{(result.v_result.mark + result.g_result.mark + 100)/3}" %> <br/>
  <%= content_tag :span, "Дата: #{result.updated_at.to_date.inspect}"  %><br/>
  <br/>
<% end %>

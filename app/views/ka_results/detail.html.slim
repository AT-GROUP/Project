h2 Детальные результаты
h3 #{@student.fio}
h4 Итоговая оценка: #{@result.assessment}
h4 Данные ответы
table
  thead
    tr
      th.question = "Вопрос"
      th.answers_count = "Кол-во ответов"
      th.correct_count = "Кол-во корректных"
      th.text = "Текст"
      th.correct = "Корректность"
  tbody
    - @result.ka_answer_logs.each do |a|
      tr
        td.answer_id = a.ka_answer.ka_question.text
        td.answers_count = a.ka_answer.ka_question.ka_answer.count
        td.correct_count = a.ka_answer.ka_question.ka_answer.where(correct: 1).count
        td.text = a.ka_answer.text
        td.correct = a.ka_answer.correct

h4 Проблемные зоны
table
  thead
    tr
      th.topic = "Тема"
      th.mark = "Оценка"
  tbody
    - @result.problem_areas.each do |p|
      tr
        td.topic = p.ka_topic.text
        td.mark = p.mark.round(2)

h4 Охват компетенций
table
  thead
    tr
      th.code = "Компетенция"
      th.desc = "Описание"
      th.mark = "Оценка"
  tbody
    - @result.competence_coverages.each do |c|
      tr
        td.code = c.competence.code
        td.desc = c.competence.description
        td.mark = c.mark.round(2)

<% if (@psession != nil) %>
Current plan:<br>

<% @psession.completed_tasks.each do |ct| %>
    <%= ct.description %> [Завершено]<br/>
<% end %>
<% if @cur_task %>
    <%= @cur_task.description %> [Выполняется, <%= link_to("Завершить", :controller => "planning", :action => "close_task", :task => @cur_task, :remote => true)%>]<br/>
<% end %>
<% if @psession.plan %>
<% @psession.plan.each do |pt| %>
    <%= pt["description"] %>[<%= (pt["available"] && (!@cur_task)) ? link_to("Приступить", :controller => "planning", :action => "begin_task", :plan_step => pt["number"], :remote => true) : nil %>]<br/>
<% end %>
<% end %>


<%= form_tag("authentificate", method: "POST") do %>
  <%= label_tag(:login, "Login:") %>
  <%= text_field_tag(:login, nil, autofocus: true ) %>
  <br/>
  <%= label_tag(:pass, "Password:") %>
  <%= password_field_tag(:pass) %>
  <%= hidden_field_tag(:path, @path) %>
  <br/>
  <%= submit_tag("Login") %>
<% end %>
